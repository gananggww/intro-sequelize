<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Data Students</title>
  </head>
  <body>
    <center>
    <h1>Data Murid</h1>
    <a href = "/students/add"> <button type="button" name="buttons">Tambah Data</button></a><br><br>
    <table border = "1">
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Add Subject</th>
      <th>Edit</th>
      <th>Hapus</th>
    </tr>
    <%data.forEach(dataShow => {%>
      <tr>
        <td><%=dataShow.id%></td>
        <td><%=dataShow.first_name%></td>
        <td><%=dataShow.last_name%></td>
        <td><%=dataShow.email%></td>
        <td><a href="/students/addSubject/<%=dataShow.id%>"> <button type="button" name="buttons">Tambah Subject</button></td>
        <td><a href="/students/edit/<%=dataShow.id%>"> <button type="button" name="buttons">Ganti</button></a></td>
        <td><a href="/students/delete/<%=dataShow.id%>"> <button type="button" name="buttons">Hapus</button></a></td>
      </tr>
    <%})%>
  </table>
  <br><a href = "/"> <button type="button" name="buttons">Home</button></a><br><br>
</center>
  </body>
</html>
